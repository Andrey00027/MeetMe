<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Background color -->
        </shape>
    </item>

    <!-- Border Layer -->
    <item>
        <shape android:shape="rectangle">
             <!-- Border color -->
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <!-- Floral Pattern Layer -->
    <item>
        <bitmap
            android:src="@drawable/frame_pattern"
            android:gravity="fill"/>
    </item>
</layer-list>
