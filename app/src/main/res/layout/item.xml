<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_gradient_card">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:id="@+id/imvCardImage"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/no_image"
                    android:background="@drawable/rounded_image"/>

                <TextView
                    android:id="@+id/card_swipe_left_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:alpha="0"
                    android:background="@drawable/rounded_red_bg"
                    android:padding="8dp"
                    android:text="DISLIKE"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_gravity="start|top"/>

                <TextView
                    android:id="@+id/card_swipe_right_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:alpha="0"
                    android:background="@drawable/rounded_green_bg"
                    android:padding="8dp"
                    android:text="LIKE"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_gravity="end|top"/>

            </FrameLayout>

            <TextView
                android:id="@+id/txvNameCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Name"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:paddingTop="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="@color/gray_light"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txvAgeCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp"
                    android:text="Age: 25"
                    android:textSize="16sp"
                    android:textColor="@color/gray_dark"/>

                <TextView
                    android:id="@+id/txvPhoneCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp"
                    android:text="Phone: +123456789"
                    android:textSize="16sp"
                    android:textColor="@color/gray_dark"/>

                <TextView
                    android:id="@+id/txvHobbiesCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp"
                    android:text="Hobbies: Reading, Traveling"
                    android:textSize="16sp"
                    android:textColor="@color/gray_dark"/>

                <TextView
                    android:id="@+id/txvOccupationCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp"
                    android:text="Occupation: Software Developer"
                    android:textSize="16sp"
                    android:textColor="@color/gray_dark"/>

                <TextView
                    android:id="@+id/txvSocialStatusCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp"
                    android:text="Social Status: Single"
                    android:textSize="16sp"
                    android:textColor="@color/gray_dark"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
