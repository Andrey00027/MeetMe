<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/imvCardImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/no_image"
                android:background="@drawable/rounded_image" />

            <TextView
                android:id="@+id/card_swipe_left_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:alpha="0"
                android:background="@drawable/rounded_red_bg"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="DISLIKE"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="start|top" />

            <TextView
                android:id="@+id/card_swipe_right_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:alpha="0"
                android:background="@drawable/rounded_green_bg"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="LIKE"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="end|top" />
        </FrameLayout>


        <TextView
            android:id="@+id/txvNameCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingVertical="8dp"
            android:text="Nombre"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="8dp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_light" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/txvAgeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:text="Edad"
                android:textSize="16sp"
                android:textColor="@color/gray_dark" />

            <TextView
                android:id="@+id/txvPhoneCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:text="Telefono"
                android:textSize="16sp"
                android:textColor="@color/gray_dark" />

            <TextView
                android:id="@+id/txvHobbiesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:text="Hobbies"
                android:textSize="16sp"
                android:textColor="@color/gray_dark" />

            <TextView
                android:id="@+id/txvOccupationCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:text="Ocupacion"
                android:textSize="16sp"
                android:textColor="@color/gray_dark" />

            <TextView
                android:id="@+id/txvSocialStatusCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:text="Estado civil"
                android:textSize="16sp"
                android:textColor="@color/gray_dark" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
